{
  "manifest_version": 3,
  "name": "Screen Capture",
  "version": "1.0",
  "description": "Capture a screenshot of the current page.",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
